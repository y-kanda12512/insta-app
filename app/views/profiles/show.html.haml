%div.profile.padding-top.padding-bottom
    %div.inner
        %div.profile__head
            %span.profile__head-name
                = @account_name
        %div.profile__image
            = image_tag 'profile-image'
        %div.profile__body
            %div.profile__counts
                %div.count
                    %div.count__number 44
                    %div.count__text Posts
                %div.count
                    %div.count__number 110
                    %div.count__text Followers
                %div.count
                    %div.count__number 44
                    %div.count__text Following
            %div.profile__posts-content
                %div.profile__posts-upper-row
                    %div.profile__post
                        = image_tag 'post-1'
                    %div.profile__post
                        = image_tag 'post-2'
                    %div.profile__post
                        = image_tag 'post-3'
                %div.profile__posts-lower-tier
                    %div.profile__post
                        = image_tag 'post-4'
                    %div.profile__post
                        = image_tag 'post-5'
                    %div.profile__post
                        = image_tag 'post-6'