.login-top-img
  = image_tag 'login-top',alt: 'Login Top'

.inner
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post ,class:'form'}) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :email,class:'form__label'
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email",class:'form__input'
    .actions
      = f.submit "パスワード再設定用メールを送信する",class:'form__submit'
  = render "devise/shared/links"
